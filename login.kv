<Login>:
	status:result
	GridLayout:
		orientation: 'vertical'
		rows: 5
		cols: 1
		padding: 10
		spacing: 10

		Label:
			text:""
			id:result
			font_size: 20
		BoxLayout:
			orientation:"horizontal"
			Label:
				text: "Utilisateur:"
				font_size: 20
			TextInput:
				id:username
				multiline:False
				font_size: 20
				size_hint: (0.9, 0.4)
		BoxLayout:
			orientation:"horizontal"
			Label:
				text: "Mot de passe: "
				font_size: 20
			TextInput:
				multiline:False
				id: password
				font_size: 20
				size_hint: (0.9, 0.4)
				password: True
		Button:
			text:"Authentification"
			on_press:root.validate(username.text, password.text)
			size_hint: (1,.3)
			font_size: 20
			
		Button:
			text:"Nouvel Utilisateur"
			on_press:root.nouveau()
			size_hint: (1,.3)
			font_size: 20
			
<NewUser>:
	status: result
	GridLayout:
		orientation: 'vertical'
		rows: 6
		cols: 1
		padding: 10
		spacing: 10

		Label:
			text:""
			id:result
			font_size: 20
		BoxLayout:
			orientation:"horizontal"
			Label:
				text: "Nom d'utilisateur :"
				font_size: 20
			TextInput:
				id:username
				multiline:False
				font_size: 20
				size_hint: (0.9, 0.4)
		BoxLayout:
			orientation:"horizontal"
			Label:
				text: "Mot de passe : "
				font_size: 20
			TextInput:
				multiline:False
				id: password
				font_size: 20
				size_hint: (0.9, 0.4)
				password: True
		BoxLayout:
			orientation:"horizontal"
			Label:
				text: "Confirmer mot de passe : "
				font_size: 20
			TextInput:
				multiline:False
				id: passwordConfirm
				font_size: 20
				size_hint: (0.9, 0.4)
				password: True
			
		Button:
			text:"Envoyer"
			on_press:root.validate(username.text, password.text, passwordConfirm.text)
			size_hint: (1,.3)
			font_size: 20
			
		Button:
			text:"Retour"
			on_press:root.retour()
			size_hint: (1,.3)
			font_size: 20

