<InCastle>:
	boisLabel: bois
	ferLabel: fer
	nourritureLabel: nourriture
	size: root.size
	pos: (0, 0)
    canvas:
		Rectangle:
            source: 'images/grass.png'
            size: root.size
	GridLayout:
		orientation: 'vertical'
		rows: 4
		cols: 1
		padding: 10
		spacing: 10
		Button:
			text:"Construction"
			font_size: 20
			height: root.height/5
			width: root.width/5
			on_press:root.ouvrirMenuConstruction()
		Label: 
			text:'Bois'
			font_size: 20
			id: bois
		Label:
			text:'Fer'
			font_size: 20
			id: fer
		Label:
			text:'Nourriture'
			font_size:20
			id: nourriture